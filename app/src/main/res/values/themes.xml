        <item name="colorPrimary">#FCA311</item>
        <item name="colorPrimaryVariant">#14213D</item>
        <item name="colorOnPrimary">#000000</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">#000000</item>
        <item name="colorSecondaryVariant">#FFFFFF</item>
        <item name="colorOnSecondary">#E5E5E5</item>

        <!-- Bottom Navigation Style. -->
        <item name="bottomNavigationStyle">@style/BottomNavigationViewStyle</item>
        <!-- Status bar style. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

    </style>
</resources>
